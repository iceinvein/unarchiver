{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Unarchiver",
  "version": "1.0.0",
  "identifier": "com.dikrana.unarchiver",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "unarchiver",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {},
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      },
      "entitlements": "entitlements.mas.plist",
      "exceptionDomain": null,
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "fileAssociations": [
      {
        "ext": [
          "zip",
          "7z",
          "rar",
          "tar",
          "gz",
          "bz2",
          "xz",
          "tgz",
          "tbz2",
          "txz",
          "iso"
        ],
        "name": "Archive",
        "role": "Viewer",
        "mimeType": "application/zip"
      }
    ]
  }
}